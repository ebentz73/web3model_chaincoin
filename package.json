{
  "name": "web3connect",
  "version": "1.0.0-beta",
  "description": "A react component to connect to multiple wallets using web3 providers",
  "scripts": {
    "clean:node_modules": "rm -rf node_modules && cd example && rm -rf node_modules",
    "bootstrap": "npm install && cd example && yarn",
    "start": "cd example && yarn start",
    "clean": "rm -rf lib",
    "build": "webpack",
    "test": "mocha --require ./babel-polyfill.js test/**/*.spec.js",
    "check": "npm run clean && npm run build && npm run test"
  },
  "private": true,
  "keywords": [
    "metamask",
    "walletconnect",
    "ethereum",
    "web3",
    "crypto"
  ],
  "author": "WalletConnect <walletconnect.org>",
  "license": "LGPL-3.0",
  "main": "lib/index.js",
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "files": [
    "lib",
    "src"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/walletconnect/web3connect.git"
  },
  "bugs": {
    "url": "https://github.com/walletconnect/web3connect/issues"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.1.2",
    "@babel/node": "^7.0.0",
    "@babel/polyfill": "^7.0.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-typescript": "^7.1.0",
    "@babel/register": "^7.0.0",
    "@types/chai": "^4.1.6",
    "@types/mocha": "^5.2.5",
    "@types/qr-image": "^3.2.1",
    "chai": "^4.1.2",
    "file-loader": "^3.0.1",
    "isomorphic-fetch": "^2.2.1",
    "mocha": "5.2.0",
    "terser": "^3.14.1",
    "ts-loader": "^5.3.3",
    "typescript": "^3.1.3",
    "webpack": "^4.28.3",
    "webpack-cli": "^3.2.1"
  },
  "dependencies": {
    "@types/react": "^16.8.12",
    "@types/styled-components": "^4.1.12",
    "prop-types": "^15.7.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "styled-components": "^4.2.0"
  }
}
