{
  "name": "web3connect",
  "version": "1.0.0-beta.1",
  "description": "A react component to connect to multiple wallets using web3 providers",
  "scripts": {
    "clean:node_modules": "rm -rf node_modules && cd example && rm -rf node_modules",
    "bootstrap": "npm install && cd example && yarn",
    "start": "npm run check && cd example && yarn start",
    "clean": "rm -rf lib",
    "build": "webpack",
    "test": "mocha --require ./babel-polyfill.js test/**/*.spec.js",
    "check": "npm run clean && npm run build && npm run test"
  },
  "keywords": [
    "metamask",
    "walletconnect",
    "ethereum",
    "web3",
    "crypto"
  ],
  "author": "WalletConnect <walletconnect.org>",
  "license": "LGPL-3.0",
  "main": "lib/index.js",
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "files": [
    "lib",
    "src"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/walletconnect/web3connect.git"
  },
  "bugs": {
    "url": "https://github.com/walletconnect/web3connect/issues"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.1.2",
    "@babel/node": "^7.0.0",
    "@babel/polyfill": "^7.0.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-typescript": "^7.1.0",
    "@babel/register": "^7.0.0",
    "@types/qr-image": "^3.2.1",
    "@types/react": "^16.7.20",
    "@types/styled-components": "4.1.8",
    "chai": "^4.1.2",
    "file-loader": "^3.0.1",
    "isomorphic-fetch": "^2.2.1",
    "mocha": "5.2.0",
    "terser": "^3.14.1",
    "ts-loader": "^5.3.3",
    "typescript": "^3.1.3",
    "webpack": "^4.28.3",
    "webpack-cli": "^3.2.1"
  },
  "dependencies": {
    "prop-types": "^15.7.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "styled-components": "4.2.0",
    "url-loader": "^1.1.2"
  }
}
